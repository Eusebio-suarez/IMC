<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultActivity"
    android:background="#131314"
    android:paddingHorizontal="20dp"
    android:paddingVertical="40dp"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/resulText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu Resultado"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/resultCard"
        app:layout_constraintTop_toBottomOf="@+id/resulText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#212025"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="NORMAl"
                android:textStyle="bold"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/IMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_200"
                tools:text="44.0"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textSize="60dp">
            </TextView>

            <TextView
                android:id="@+id/resultMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="la verdad estas cmomo el culo y ps eso no etsa mall si te gusta la verga"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:textColor="#D7D3D3"
                >
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/resultCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Regresar"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:textColor="@color/white"
        android:layout_marginVertical="30dp"
        android:paddingVertical="15dp">

    </com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>